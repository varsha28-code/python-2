class Solution(object):
    def validPalindrome(self, s):
        def is_palindrome(st):
            return st == st[::-1]
        i, j = 0, len(s) - 1
        while i < j:
            if s[i] != s[j]:
                # Try removing one character (left or right)
                return is_palindrome(s[i+1:j+1]) or is_palindrome(s[i:j])
            i += 1
            j -= 1
        return True
