from collections import deque
class Solution:
    # Function to return Breadth First Search Traversal of given graph.
    def bfs(self, adj):
        n = len(adj)
        visited = [0] * n
        startNode = 0
        visited[startNode] = 1
        q = deque([startNode])
        ans = []
        while len(q) > 0:
            node = q.popleft()
            ans.append(node)
            for i in adj[node]:
                if visited[i] == 0:
                    visited[i] = 1
                    q.append(i)
        return ans
